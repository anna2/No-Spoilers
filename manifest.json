{
    "manifest_version": 2,

    "name": "No spoilers",
    "version": "1.0",
    "description": "This extension blocks spoilers.",
    "icons": {
        "16" : "icon.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": [
        "tabs", "http://*/*", "https://*/*", "storage"
    ],
    "browser_action": {
        "default_title" : "Block spoilers!",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}
